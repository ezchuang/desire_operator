<!DOCTYPE html>
<html lang="zh-Hant">
  <head>
    <link rel="shortcut icon" href="/img/MySQL_Speaker_Logo.png" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MySQL Speaker</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body class="bg-orange-100 min-h-screen">
    <div class="flex flex-col">
      <!-- NAV -->
      <nav class="bg-blue-500 p-4 text-white fixed w-full z-30">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <!-- Content for NAV -->
          <div class="font-bold text-2xl">MySQL Speaker</div>
          <div class="w-auto">
            <div
              id="userInfo"
              class="bg-purple-600 w-8 h-8 rounded-full cursor-pointer"
              title="用户名全名"
            ></div>
          </div>
          <div>Navigation Items</div>
        </div>
      </nav>

      <!-- PATH -->
      <div class="bg-blue-200 p-2 text-blue-900 text-sm sticky top-16 z-20">
        <div class="max-w-7xl mx-auto">
          <!-- Content for PATH -->
          <div>Breadcrumb / Path</div>
        </div>
      </div>

      <div class="max-w-7xl mx-auto p-4 pt-20 w-full">
        <!-- MAIN TABLE -->
        <div class="flex flex-row lg:space-x-4 relative">
          <div
            class="flex-grow bg-white shadow-lg p-4 mb-4 overflow-auto max-h-screen h-[440px] rounded-md"
          >
            <!-- Placeholder for React Table Component -->
            <div id="mainTable"><!-- React Table --></div>
          </div>
        </div>

        <!-- QUERY COMBINE -->
        <div
          class="bg-white shadow-lg p-4 mb-4 overflow-auto h-[150px] rounded-md"
        >
          <!-- Content for QUERY COMBINE -->
          <div id="queryCombineTool"><!-- React Table --></div>
        </div>

        <!-- HISTORY -->
        <div
          class="bg-white shadow-lg p-4 mb-4 overflow-auto h-[150px] rounded-md"
        >
          <!-- Content for HISTORY -->
          <div id="historyTable"><!-- React Table --></div>
        </div>
      </div>
    </div>
    <div class="floating-container">
      <button id="toggleShortcut" class="floating-btn text-white">
        Shortcut
      </button>
      <div
        class="bg-white shadow-lg p-4 mb-4 overflow-auto hidden floating-panel"
        id="shortcutLinks"
      >
        <div id="shortCutTable"><!-- React Table --></div>
      </div>
    </div>
    <script src="/js/index.js"></script>
  </body>
</html>
