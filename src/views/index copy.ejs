<!DOCTYPE html>
<html lang="zh-Hant">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MySQL Speaker</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <div class="flex flex-col">
      <!-- NAV -->
      <nav class="bg-blue-500 p-4 text-white fixed w-full z-30">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <!-- Content for NAV -->
          <div class="font-bold text-2xl">MySQL Speaker</div>
          <div>Navigation Items</div>
          <div
            id="userInfo"
            class="bg-purple-600 w-8 h-8 rounded-full cursor-pointer"
            title="用户名全名"
          ></div>
        </div>
      </nav>

      <!-- PATH -->
      <div class="bg-blue-200 p-2 text-blue-900 text-sm sticky top-16 z-20">
        <div class="max-w-7xl mx-auto">
          <!-- Content for PATH -->
          <div>Breadcrumb / Path</div>
        </div>
      </div>

      <div class="max-w-7xl mx-auto p-4 pt-24 w-full">
        <!-- MAIN TABLE -->
        <div class="flex flex-row lg:space-x-4 relative">
          <div
            class="flex-grow bg-white shadow-lg p-4 mb-4 overflow-auto max-h-screen"
          >
            <!-- Placeholder for React Table Component -->
            <div id="mainTable"><!-- React Table --></div>
          </div>

          <!-- RIGHT SIDE PANEL -->
          <div
            class="lg:w-1/4 flex flex-col gap-4 mt-0 relative z-20"
            id="shortcutPanel"
          >
            <!-- USER -->
            <!-- <div
              class="bg-white shadow-lg p-4 mb-4 overflow-auto lg:block hidden"
              id="userInfo"
            > -->
            <!-- User Content -->
            <!-- <div>User Information</div>
            </div> -->

            <!-- SHORTCUT -->
            <button
              id="toggleShortcut"
              class="bg-white shadow-lg p-2 lg:hidden w-12 rounded-full"
            >
              Shortcut
            </button>
            <div
              class="bg-white shadow-lg p-4 mb-4 overflow-auto lg:block hidden"
              id="shortcutLinks"
            >
              <!-- Shortcut Content -->
              <div>Shortcut Links</div>
            </div>
          </div>
        </div>

        <!-- QUERY COMBINE -->
        <div class="bg-white shadow-lg p-4 mb-4 overflow-auto max-h-screen">
          <!-- Content for QUERY COMBINE -->
          <div>Query Combine Tools</div>
        </div>

        <!-- HISTORY -->
        <div class="bg-white shadow-lg p-4 mb-4 overflow-auto max-h-screen">
          <!-- Content for HISTORY -->
          <div>History Logs</div>
        </div>
      </div>
    </div>
    <script src="/js/index.js"></script>
  </body>
</html>
